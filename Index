import React, { useState, useRef } from "react";
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";

export default function PhotoFrameUploader() {
  const [image, setImage] = useState(null);
  const frameRef = useRef();

  const handleImageUpload = (event) => {
    const file = event.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        setImage(e.target.result);
      };
      reader.readAsDataURL(file);
    }
  };

  const handleDownload = () => {
    if (!frameRef.current || !image) return;

    const canvas = document.createElement("canvas");
    const context = canvas.getContext("2d");
    const img = new Image();
    img.crossOrigin = "anonymous";

    img.onload = () => {
      canvas.width = img.width;
      canvas.height = img.height;

      context.drawImage(img, 0, 0);

      // Label text
      const label =
        "I WILL BE ATTENDING CARE COLLECTIVE FASHION GALA SHOW 2025 ON SUNDAY BY 3PM";

      // Draw label background
      context.fillStyle = "rgba(144, 238, 144, 0.8)";
      context.fillRect(0, img.height - 50, img.width, 50);

      // Draw label text
      context.font = "20px Arial";
      context.fillStyle = "black";
      context.fillText(label, 10, img.height - 25);

      const link = document.createElement("a");
      link.download = "framed-photo.png";
      link.href = canvas.toDataURL("image/png");
      link.click();
    };

    img.src = image;
  };

  return (
    <div className="min-h-screen bg-gray-100 flex flex-col items-center justify-center p-4">
      <h1 className="text-2xl font-bold mb-6 text-center">
        Upload Your Photo for the Care Collective Fashion Gala Show 2025
      </h1>

      <input
        type="file"
        accept="image/*"
        onChange={handleImageUpload}
        className="mb-4"
      />

      <Card className="w-full max-w-md p-4 bg-white shadow-lg">
        <CardContent
          ref={frameRef}
          className="relative w-full h-96 border-4 border-green-300 rounded-2xl overflow-hidden"
        >
          {image ? (
            <img
              src={image}
              alt="Uploaded"
              className="object-cover w-full h-full"
            />
          ) : (
            <div className="w-full h-full flex items-center justify-center text-gray-400">
              No photo uploaded
            </div>
          )}

          <div className="absolute bottom-0 w-full bg-green-200 bg-opacity-80 text-center py-2 text-sm font-semibold">
            <span className="text-black">I WILL BE ATTENDING </span>
            <span className="text-red-600">
              CARE COLLECTIVE FASHION GALA SHOW 2025
            </span>
            <span className="text-black"> ON SUNDAY BY 3PM</span>
          </div>
        </CardContent>
      </Card>

      {image && (
        <Button className="mt-4" onClick={handleDownload}>
          Download Framed Photo
        </Button>
      )}
    </div>
  );
}
